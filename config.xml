<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yada.mrc.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>券实惠</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/icon.png" />
        <preference name="LoadUrlTimeoutValue" value="70000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#ff7176" />
        <icon height="180" src="res/ios/icon-60pt@3x.png" width="180" />
        <icon height="120" src="res/ios/icon-60pt@2x.png" width="120" />
        <icon height="72" src="res/ios/icon-29pt@3x.png" width="72" />
        <icon height="58" src="res/ios/icon-29pt@2x.png" width="58" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="WebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <engine name="android" spec="^6.1.2" />
    <engine name="ios" spec="^4.5.0" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-clipboard2" spec="^0.1.0" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-splashscreen" spec="git+https://github.com/apache/cordova-plugin-splashscreen.git" />
    <plugin name="cordova-plugin-sqlite-2" spec="^1.0.4" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-wechat" spec="^1.4.0">
        <variable name="WECHATAPPID" value="wx4019599e88479395" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.8">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
    </plugin>
</widget>
